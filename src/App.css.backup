    font-size: 1rem;
    transition: var(--transition);
    background: var(--surface);
    color: var(--text-primary);
}

.form-select:focus,
.form-textarea:focus {
    outline: none;
    border-color: var(--primary);
    box-shadow: 0 0 0 4px rgba(255, 159, 67, 0.15);
}

.form-textarea {
    resize: vertical;
    min-height: 80px;
}

/* Utilities */
.text-center {
    text-align: center;
}

/* Responsive */
@media (max-width: 768px) {
    .app-sidebar {
        transform: translateX(-100%);
    }

    .main-content {
        margin-left: 0;
        padding: var(--spacing-md);
    }

    .dashboard-summary {
        grid-template-columns: 1fr;
    }
}

/* Hamburger Menu Button */
.hamburger-menu {
    position: fixed;
    top: 1.5rem;
    left: 1.5rem;
    z-index: 1001;
    background: var(--primary);
    border: none;
    width: 50px;
    height: 50px;
    border-radius: var(--radius-md);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 6px;
    cursor: pointer;
    transition: var(--transition);
    box-shadow: 0 4px 12px rgba(255, 159, 67, 0.3);
}

.hamburger-menu:hover {
    background: var(--primary-hover);
    transform: scale(1.05);
    box-shadow: 0 6px 16px rgba(255, 159, 67, 0.4);
}

.hamburger-line {
    width: 24px;
    height: 3px;
    background: white;
    border-radius: 2px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.hamburger-line.open:nth-child(1) {
    transform: translateY(9px) rotate(45deg);
}

.hamburger-line.open:nth-child(2) {
    opacity: 0;
    transform: translateX(-20px);
}

.hamburger-line.open:nth-child(3) {
    transform: translateY(-9px) rotate(-45deg);
}

/* Sidebar Overlay */
.sidebar-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 999;
    backdrop-filter: blur(2px);
    animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
    from {
        opacity: 0;
    }

    to {
        opacity: 1;
    }
}

/* Update Sidebar for Toggle */
.app-sidebar {
    transform: translateX(-100%);
    box-shadow: 4px 0 12px rgba(0, 0, 0, 0.1);
}

.app-sidebar.open {
    transform: translateX(0);
    z-index: 1000;
}

/* Update Main Content for Hamburger */
.main-content {
    margin-left: 0 !important;
    padding-left: 5rem;
}

/* ===========================
   Search & Filter Section
   =========================== */

.search-filter-container {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-xl);
    background: var(--surface);
    padding: var(--spacing-lg);
    border-radius: var(--radius-md);
    border: 1px solid var(--border);
}

.search-bar {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    background: var(--background);
    padding: var(--spacing-sm) var(--spacing-md);
    border-radius: var(--radius-md);
    border: 1px solid var(--border);
    transition: var(--transition);
}

.search-bar:focus-within {
    border-color: var(--primary);
    box-shadow: 0 0 0 2px rgba(255, 159, 67, 0.1);
}

.search-icon {
    font-size: 1.2rem;
    opacity: 0.5;
}

.search-input {
    flex: 1;
    border: none;
    background: transparent;
    padding: var(--spacing-xs);
    font-size: 1rem;
    color: var(--text-primary);
    font-family: var(--font-family);
}

.search-input:focus {
    outline: none;
}

.clear-search-btn {
    background: none;
    border: none;
    color: var(--text-secondary);
    cursor: pointer;
    padding: var(--spacing-xs);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: var(--transition);
}

.clear-search-btn:hover {
    background: rgba(0, 0, 0, 0.05);
    color: var(--danger);
}

.filter-chips {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--spacing-sm);
}

.filter-label {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--text-secondary);
    margin-right: var(--spacing-xs);
}

.filter-chip {
    background: var(--background);
    border: 1px solid var(--border);
    padding: 0.5rem 1rem;
    border-radius: var(--radius-full);
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--text-secondary);
    cursor: pointer;
    transition: var(--transition);
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
}

.filter-chip:hover {
    background: var(--surface-hover);
    border-color: var(--text-light);
    color: var(--text-primary);
}

.filter-chip.active {
    background: rgba(255, 159, 67, 0.1);
    border-color: var(--primary);
    color: var(--primary);
    font-weight: 600;
}

.clear-filters-btn {
    align-self: flex-start;
    background: none;
    border: none;
    color: var(--text-secondary);
    font-size: 0.875rem;
    cursor: pointer;
    padding: var(--spacing-xs) 0;
    text-decoration: underline;
    transition: var(--transition);
}

.clear-filters-btn:hover {
    color: var(--danger);
}