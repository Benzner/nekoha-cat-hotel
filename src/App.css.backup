.calendar-day {
    min-height: 120px;
    background: var(--surface);
    padding: 4px;
    display: flex;
    flex-direction: column;
    transition: background-color 0.2s;
}

.calendar-day:hover {
    background: var(--surface-hover);
}

.calendar-day.today {
    background: rgba(255, 159, 67, 0.05);
}

.calendar-day.other-month {
    background: #f9fafb;
    opacity: 0.7;
}

.calendar-day-header-row {
    display: flex;
    justify-content: flex-end;
    margin-bottom: 4px;
}

.calendar-day-number {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--text-secondary);
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
}

.calendar-day.today .calendar-day-number {
    background: var(--primary);
    color: white;
}

.calendar-events {
    display: flex;
    flex-direction: column;
    gap: 2px;
    flex: 1;
}

.event-bar {
    font-size: 0.75rem;
    padding: 2px 6px;
    border-radius: 4px;
    color: white;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    cursor: pointer;
    font-weight: 500;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
    transition: transform 0.1s;
}

.event-bar:hover {
    transform: scale(1.02);
    z-index: 10;
}

.event-more {
    font-size: 0.7rem;
    color: var(--text-secondary);
    padding-left: 4px;
    cursor: pointer;
}

.event-more:hover {
    color: var(--primary);
    text-decoration: underline;
}

.calendar-legend {
    display: flex;
    justify-content: center;
    gap: var(--spacing-lg);
    margin-top: var(--spacing-lg);
    padding-top: var(--spacing-md);
    border-top: 1px solid var(--border);
}

.legend-item {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    font-size: 0.875rem;
    color: var(--text-secondary);
}

.legend-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
}

/* Reservations List */
.reservation-item {
    background: var(--surface);
    border-radius: var(--radius-md);
    padding: var(--spacing-lg);
    margin-bottom: var(--spacing-md);
    border: 1px solid var(--border);
    display: flex;
    flex-direction: column;
    transition: var(--transition);
}

.reservation-item:hover {
    border-color: var(--primary);
    box-shadow: var(--shadow-sm);
}

.reservation-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    width: 100%;
    margin-bottom: var(--spacing-md);
}

.reservation-info h3 {
    margin-bottom: var(--spacing-xs);
    font-size: 1.1rem;
}

.reservation-meta {
    color: var(--text-secondary);
    font-size: 0.9rem;
}

.reservation-actions {
    display: flex;
    gap: var(--spacing-sm);
}

.reservation-details {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: var(--spacing-md);
    padding-top: var(--spacing-md);
    border-top: 1px solid var(--border);
    width: 100%;
}

.detail-item {
    display: flex;
    flex-direction: column;
}

.detail-label {
    font-size: 0.75rem;
    text-transform: uppercase;
    color: var(--text-light);
    font-weight: 600;
    margin-bottom: 4px;
}

.detail-value {
    font-size: 0.95rem;
    color: var(--text-primary);
    font-weight: 500;
}

/* Empty State */
.empty-state {
    text-align: center;
    padding: var(--spacing-2xl);
    color: var(--text-secondary);
}

.empty-state-icon {
    font-size: 3rem;
    margin-bottom: var(--spacing-md);
    opacity: 0.5;
}

.empty-state-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: var(--spacing-sm);
}

/* Modal */
.modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 1000;
    align-items: center;
    justify-content: center;
}

.modal.active {
    display: flex;
}

.modal-content {
    background: var(--surface);
    border-radius: var(--radius-lg);
    max-width: 600px;
    width: 90%;
    max-height: 90vh;
    overflow-y: auto;
    box-shadow: var(--shadow-lg);
}

.modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--spacing-xl);
    border-bottom: 1px solid var(--border);
}

.modal-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0;
}

.modal-close {
    background: none;
    border: none;
    font-size: 2rem;
    color: var(--text-secondary);
    cursor: pointer;
    line-height: 1;
    transition: var(--transition);
}

.modal-close:hover {
    color: var(--text-primary);
}

.modal-body {
    padding: var(--spacing-xl);
}

.modal-footer {
    display: flex;
    justify-content: flex-end;
    gap: var(--spacing-md);
    padding: var(--spacing-xl);
    border-top: 1px solid var(--border);
}

/* Day Reservations Modal */
.day-reservations-list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
}

.day-reservation-item {
    padding: var(--spacing-md);
    background: var(--surface-hover);
    border-radius: var(--radius-md);
    border-left: 4px solid var(--primary);
}

.day-res-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--spacing-sm);
}

.day-res-cat {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--text-primary);
}

.day-res-room {
    font-size: 0.875rem;
    font-weight: 600;
    padding: 4px 8px;
    background: rgba(255, 159, 67, 0.1);
    border-radius: var(--radius-sm);
}

.day-res-details {
    display: flex;
    flex-direction: column;
    gap: 4px;
    font-size: 0.875rem;
    color: var(--text-secondary);
}

.day-res-note {
    margin-top: var(--spacing-sm);
    padding: var(--spacing-sm);
    background: var(--surface);
    border-radius: var(--radius-sm);
    font-size: 0.875rem;
    font-style: italic;
    color: var(--text-secondary);
}

.text-secondary {
    color: var(--text-secondary);
}

/* Form Elements (for modals) */
.form-row {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-md);
}

.form-select,
.form-textarea {
    width: 100%;
    padding: 0.875rem 1rem;
    border: 1px solid var(--border);
    border-radius: var(--radius-md);
    font-family: var(--font-family);
    font-size: 1rem;
    transition: var(--transition);
    background: var(--surface);
    color: var(--text-primary);
}

.form-select:focus,
.form-textarea:focus {
    outline: none;
    border-color: var(--primary);
    box-shadow: 0 0 0 4px rgba(255, 159, 67, 0.15);
}

.form-textarea {
    resize: vertical;
    min-height: 80px;
}

/* Utilities */
.text-center {
    text-align: center;
}

/* Responsive */
@media (max-width: 768px) {
    .app-sidebar {
        transform: translateX(-100%);
    }

    .main-content {
        margin-left: 0;
        padding: var(--spacing-md);
    }

    .dashboard-summary {
        grid-template-columns: 1fr;
    }
}

/* Hamburger Menu Button */
.hamburger-menu {
    position: fixed;
    top: 1.5rem;
    left: 1.5rem;
    z-index: 1001;
    background: var(--primary);
    border: none;
    width: 50px;
    height: 50px;
    border-radius: var(--radius-md);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 6px;
    cursor: pointer;
    transition: var(--transition);
    box-shadow: 0 4px 12px rgba(255, 159, 67, 0.3);
}

.hamburger-menu:hover {
    background: var(--primary-hover);
    transform: scale(1.05);
    box-shadow: 0 6px 16px rgba(255, 159, 67, 0.4);
}

.hamburger-line {
    width: 24px;
    height: 3px;
    background: white;
    border-radius: 2px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.hamburger-line.open:nth-child(1) {
    transform: translateY(9px) rotate(45deg);
}

.hamburger-line.open:nth-child(2) {
    opacity: 0;
    transform: translateX(-20px);
}

.hamburger-line.open:nth-child(3) {
    transform: translateY(-9px) rotate(-45deg);
}

/* Sidebar Overlay */
.sidebar-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 999;
    backdrop-filter: blur(2px);
    animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
    from {
        opacity: 0;
    }

    to {
        opacity: 1;
    }
}

/* Update Sidebar for Toggle */
.app-sidebar {
    transform: translateX(-100%);
    box-shadow: 4px 0 12px rgba(0, 0, 0, 0.1);
}

.app-sidebar.open {
    transform: translateX(0);
    justify-content: flex-end;
    gap: var(--spacing-md);
    padding: var(--spacing-xl);
    border-top: 1px solid var(--border);
}

